{
  "name": "workload-wizard-app",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev --turbopack\" \"convex dev\" \"ngrok http 3000\"",
    "dev:next": "next dev --turbopack",
    "dev:convex": "convex dev",
    "dev:tunnel": "ngrok http 3000",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --check .",
    "test": "vitest run",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui --open",
    "depcheck": "depcheck --ignore-bin-package=true --ignores=@tailwindcss/postcss,tailwindcss,eslint-config-next,tw-animate-css",
    "depgraph": "madge --circular --extensions ts,tsx src",
    "ci": "pnpm typecheck && pnpm lint && pnpm format && pnpm test && pnpm build",
    "db:reset": "node -e \"(async()=>{const {ConvexHttpClient}=require('convex/browser');const {api}=require('./convex/_generated/api');const c=new ConvexHttpClient(process.env.NEXT_PUBLIC_CONVEX_URL);await c.mutation(api.devTools.resetDemoData,{});console.log('reset ok')})()\"",
    "db:seed": "node -e \"(async()=>{const {ConvexHttpClient}=require('convex/browser');const {api}=require('./convex/_generated/api');const c=new ConvexHttpClient(process.env.NEXT_PUBLIC_CONVEX_URL);await c.mutation(api.devTools.seedDemoData,{});console.log('seed ok')})()\"",
    "test:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@clerk/nextjs": "^6.28.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@sentry/nextjs": "^10.4.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "@vitest/ui": "^3.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "next-themes": "^0.4.6",
    "posthog-js": "^1.258.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "recharts": "^2.15.4",
    "resend": "^4.8.0",
    "sonner": "^2.0.7",
    "svix": "^1.70.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@clerk/types": "^4.29.0",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "depcheck": "^1.4.7",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "madge": "^8.0.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "cookie": ">=0.7.0"
    }
  }
}
