# CI Environment Variables Template
# Copy this file to .env.ci and fill in the actual values

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_CONVEX_URL=https://your-convex-deployment.convex.cloud

# Clerk Authentication (for E2E tests)
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_TEST_USER_EMAIL=test@example.com
CLERK_TEST_USER_PASSWORD=your_test_password_here

# Convex Configuration
CONVEX_DEPLOY_KEY=your_convex_deploy_key_here

# Test Configuration
E2E_ASSUME_ADMIN=true
CI=true

# Performance Test Settings
CI_PERFORMANCE=true

# Visual Regression Settings
TZ=UTC
PLAYWRIGHT_DISABLE_ANIMATIONS=1

# Database Configuration (if using local database)
# DATABASE_URL=your_database_url_here

# Feature Flags (for testing)
# NEXT_PUBLIC_FEATURE_FLAGS_ENABLED=true

# Analytics (disabled in CI)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Email Service (disabled in CI)
RESEND_API_KEY=

# Optional: Custom test settings
# TEST_TIMEOUT=60000
# TEST_RETRIES=2
# TEST_WORKERS=1 
